var gameDiv = document.getElementById('game_field');
var platformDiv = document.getElementById('platform');

gameDiv.onclick = function(e) {

  var gameDivCoords = field.getBoundingClientRect();
  var gameDivInnerCoords = {
    left: gameDiv.left + gameDiv.clientLeft
  };

  platformDiv.style.left = e.clientX - gameDivInnerCoords.left + 'vw';
  
};